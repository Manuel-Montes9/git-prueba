@page
@model CursoRazor.Pages.Contactos.DetalleModel
@{
    ViewData["Title"] = "Destalle del Contacto";
}

<div class="Container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="text-info">Detalle de Categoria @Html.DisplayFor(m => m.Contacto.Id)</div>
            <ul class="list-group">
                <li class="list-group-item">ID: @Html.DisplayFor(m => m.Contacto.Id)</li>
                <li class="list-group-item">Nombre: @Html.DisplayFor(m => m.Contacto.Nombre)</li>
                <li class="list-group-item">Email: @Html.DisplayFor(m => m.Contacto.Email)</li>
                <li class="list-group-item">Telefono: @Html.DisplayFor(m => m.Contacto.Telefono)</li>
                <li class="list-group-item">Fecha de Creacion: @Html.DisplayFor(m => m.Contacto.FechaCreacion)</li>
                <li class="list-group-item">Categoria: @Html.DisplayFor(m => m.Contacto.Categoria.Nombre)</li>
            </ul>

        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <a asp-page="Index" class="btn btn-success">Volver</a>
        </div>
    </div>
</div>