@page
@model CursoRazor.Pages.Categorias.DetalleModel
@{
    ViewData["Title"] = "Destalle de la Categoria";
}

<div class="Container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="text-info">Detalle de Categoria @Html.DisplayFor(m => m.Categoria.Id)</div>
            <ul class="list-group">
                <li class="list-group-item">ID: @Html.DisplayFor(m => m.Categoria.Id)</li>
                <li class="list-group-item">Nombre: @Html.DisplayFor(m => m.Categoria.Nombre)</li>
                <li class="list-group-item">Fecha de Creacion: @Html.DisplayFor(m => m.Categoria.FechaCreacion)</li>
            </ul>

        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <a asp-page="Index" class="btn btn-success">Volver</a>
        </div>
    </div>
</div>