@page
@model CursoRazor.Categorias.IndexModel
@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class='text-info'>Lista de Categoria</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary" asp-page="/Categorias/crear">Crear nueva Categoria</a>
        </div>
</div>

<br />
<br />

@if (Model.categorias.Count() > 0)
{
    <table id="tblCategorias" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.categorias.FirstOrDefault().Id)</th>
                <th>@Html.DisplayNameFor(m => m.categorias.FirstOrDefault().Nombre)</th>
                <th>@Html.DisplayNameFor(m => m.categorias.FirstOrDefault().FechaCreacion)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categorias in Model.categorias)
            {
                <tr>
                        <td>@Html.DisplayFor(m => categorias.Id)</td>
                        <td>@Html.DisplayFor(m => categorias.Nombre)</td>
                        <td>@Html.DisplayFor(m => categorias.FechaCreacion)</td>
                        <td>
                            <a class="btn btn-success" asp-page="../Categorias/Detalle" asp-route-id="@categorias.Id">Detalle</a>
                            <a class="btn btn-warning" asp-page="../Categorias/Editar" asp-route-id="@categorias.Id">Editar</a>
                            <a class="btn btn-danger" asp-page="../Categorias/Borrar" asp-route-id="@categorias.Id">Borrar</a>
                        </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay categorias</p>
}
